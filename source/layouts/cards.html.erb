<div class="wrapper">
  <div class="container" id="cities">
    <div class="row">
      <h3 class="text-center">Meet with us, everywhere in the world!</h3>
      <% %w(berlin shanghai paris tokyo rio berlin).each do |city| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/<%=city%>.jpg');">
            <div class="card-description">
              <h2><%=city.upcase%></h2>
              <p>Very cool stuff, useful and smart</p>
            </div>
            <a class="card-link" href="#" ></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
